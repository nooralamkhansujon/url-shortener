generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model User {
  id        String   @id @default(uuid())
  email     String   @unique
  password  String
  createdAt DateTime @default(now())
  urls      Url[]
}

model Url {
  id          String   @id @default(uuid())
  originalUrl String
  shortCode   String   @unique
  clickCount  Int      @default(0)
  createdAt   DateTime @default(now())
  userId      String
  user        User     @relation(fields: [userId], references: [id])

  @@index([shortCode])
}
