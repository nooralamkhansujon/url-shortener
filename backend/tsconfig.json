{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",

    "rootDir": "./",
    "outDir": "./dist",

    "baseUrl": "./src",
    "paths": {
      "@/*": ["*"]
    },

    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,

    "resolveJsonModule": true
  }
}
